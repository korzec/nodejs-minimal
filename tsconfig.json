{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "build",
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
